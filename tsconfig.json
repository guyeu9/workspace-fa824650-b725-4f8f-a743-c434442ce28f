{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "upload/**/*.ts", "upload/**/*.tsx"],
  "exclude": ["node_modules", "src/__tests__", "tests", "test-auth.ts", ".next", "src/lib/test-utils.tsx", "src/lib/mobile-native.ts", "src/lib/push-notifications.ts", "src/lib/rate-limit.ts", "src/lib/database-optimization.ts", "src/components/mobile"]
}
